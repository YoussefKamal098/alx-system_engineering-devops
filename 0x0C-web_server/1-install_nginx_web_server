#!/usr/bin/env bash

# Update package index
apt-get update -y > /dev/null 2>&1

# Install nginx
apt-get install nginx -y > /dev/null 2>&1

# Create a basic HTML file with "Hello World!"
echo "Hello World!" > /var/www/html/index.html

# Ensure nginx is listening on port 80 by modifying the default configuration
server_block="server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;
    server_name _;
    location / {
        try_files \$uri \$uri/ =404;
    }
}"

echo "$server_block" > /etc/nginx/sites-available/default

# Restart nginx without using systemctl (using nginx -s reload)
nginx -s reload

# Output success message
echo "Nginx installed and configured successfully."
